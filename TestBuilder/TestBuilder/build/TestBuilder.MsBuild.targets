<Project>

    <PropertyGroup>
        <BuildDependsOn>
            TestEntityBuilder;
        </BuildDependsOn>
    </PropertyGroup>

    <Import Project="TestEntityBuilder.MsBuild.tasks" />
    <Import Project="TestEntityBuilder.MsBuild.props" />

    <Target Name="TestEntityBuilder" AfterTargets="Build">

        <GenerateTestBuilder
            ProjectPath="$(MSBuildProjectFullPath)"
            AssemblyName="$(AssemblyName)"
            TestBuilderConfigFiles ="@(TestBuilderConfigFiles)"
            >
        </GenerateTestBuilder>

        <Message Text="Done" Importance="high"/>
    </Target>
</Project>
